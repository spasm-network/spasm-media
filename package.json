{
  "name": "spasm-media",
  "version": "1.0.0",
  "description": "Serving media files for Spasm",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo 'no tests'",
    "start": "node dist/server.js",
    "dev": "npx ts-node src/server.ts",
    "build": "rm -rf dist && npx tsc",
